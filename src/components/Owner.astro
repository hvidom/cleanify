---
import { CloudUpload, Lock, Database } from "lucide-react";

interface FeatureItem {
  icon: any;
  title: string;
  description: string;
}

interface Props {
  title?: string;
  description?: any;
  features?: FeatureItem[];
  secondaryTitle?: string;
  secondaryDescription?: any;
  imageSrc?: string;
  imageAlt?: string;
  imageOverlayTitle?: string;
  imageOverlayDescription?: string;
}

const {
  title = "A Workflow Revolution",
  description = "Transform your team's productivity with our intuitive platform. Seamlessly integrate tasks, communication, and project tracking in one powerful solution.",
  features = [
    {
      icon: CloudUpload,
      title: "Instant Updates.",
      description:
        "Changes sync across all devices in real-time, ensuring your team always has the latest information at their fingertips.",
    },
    {
      icon: Lock,
      title: "Robust Security.",
      description:
        "Your data is protected with enterprise-grade encryption and customizable access controls, giving you peace of mind.",
    },
    {
      icon: Database,
      title: "Intelligent Insights.",
      description:
        "Our analytics engine provides actionable data on team performance, helping you optimize workflows and boost productivity.",
    },
  ],
  secondaryTitle = "Flexibility at Your Fingertips",
  secondaryDescription = "Whether you're a startup or an enterprise, our scalable solution grows with you. Customize workflows, integrate with your favorite tools, and automate repetitive tasks.",
  imageSrc = "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=800",
  imageAlt = "Professional headshot portrait",
  imageOverlayTitle = "Revolutionize your workflow",
  imageOverlayDescription = "20+ Expert services at your fingertips",
} = Astro.props;
---

<section class="container relative overflow-hidden py-8 sm:py-16">
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <svg
      class="absolute left-[max(50%,25rem)] top-0 h-256 w-512 -translate-x-1/2 stroke-muted mask-[radial-gradient(64rem_64rem_at_top,white,transparent)]"
      aria-hidden="true"
    >
      <defs>
        <pattern
          id="e813992c-7d03-4cc4-a2bd-151760b470a0"
          width="200"
          height="200"
          x="50%"
          y="-1"
          patternUnits="userSpaceOnUse"
        >
          <path d="M100 200V.5M.5 .5H200" fill="none" />
        </pattern>
      </defs>
      <rect
        width="100%"
        height="100%"
        stroke-width="0"
        fill="url(#e813992c-7d03-4cc4-a2bd-151760b470a0)"
      />
    </svg>
  </div>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-8 lg:gap-y-20">
      <div class="lg:col-span-7">
        <div class="max-w-2xl">
          <h1 class="mt-2 text-2xl font-semibold tracking-tight text-foreground sm:text-3xl lg:text-4xl xl:text-5xl">
            {title}
          </h1>
          <p class="mt-4 text-base leading-7 text-muted-foreground sm:mt-6 sm:text-lg sm:leading-8 lg:text-xl">
            {description}
          </p>
        </div>

        <div class="mt-8 max-w-xl text-base leading-7 text-muted-foreground sm:mt-10 lg:max-w-none">
          <ul
            role="list"
            class="mt-6 space-y-6 text-muted-foreground sm:mt-8 sm:space-y-8"
          >
            {features.map((item, _index) => {
              const Icon = item.icon;
              return (
                <li class="flex gap-x-3">
                  <Icon
                    class="mt-1 size-5 flex-none text-primary"
                    aria-hidden="true"
                  />
                  <span>
                    <strong class="font-semibold text-foreground">
                      {item.title}
                    </strong>{" "}
                    {item.description}
                  </span>
                </li>
              );
            })}
          </ul>

          <h2 class="mt-10 text-xl font-bold tracking-tight text-foreground sm:mt-12 sm:text-2xl">
            {secondaryTitle}
          </h2>
          <p class="mt-4 sm:mt-6">{secondaryDescription}</p>
        </div>
      </div>

      <div class="mt-8 sm:mt-10 lg:col-span-5 lg:row-span-2">
        <div class="relative overflow-hidden rounded-2xl shadow-xl lg:sticky lg:top-4">
          <div class="aspect-3/4 w-full">
            <img
              class="object-cover w-full h-full"
              src={imageSrc}
              alt={imageAlt}
            />
          </div>
          <div class="absolute bottom-4 left-4 right-4 w-max max-w-[calc(100%-2rem)] rounded-lg bg-background p-4 shadow">
            <p class="text-sm font-semibold sm:text-base">
              {imageOverlayTitle}
            </p>
            <p class="text-xs text-muted-foreground sm:text-sm">
              {imageOverlayDescription}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>